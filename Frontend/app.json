{
  "expo": {
    "name": "PlateMate",
    "slug": "PlateMate",
    "version": "1.0.5",
    "orientation": "default",
    "icon": "./assets/logo.png",
    "scheme": "platemate",
    "userInterfaceStyle": "light",
    "sdkVersion": "54.0.0",
    "privacy": "public",
    "splash": {
      "image": "./assets/icon2-edited.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": false,
      "bundleIdentifier": "com.zentraai.platematepro",
      "buildNumber": "2",
      "infoPlist": {
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UIBackgroundModes": [
          "fetch",
          "processing"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.zentraai.platematepro.WEARABLE_HEALTH_SYNC_TASK"
        ],
        "NSMotionUsageDescription": "PlateMate uses your device's Motion & Fitness sensors to automatically count your daily steps and help you achieve your fitness goals. Your step data is stored privately on your device for fitness tracking purposes.",
        "NSCameraUsageDescription": "PlateMate needs camera access to capture photos of your meals for food logging, scan food barcodes for quick nutrition lookup, and help you track your dietary goals visually.",
        "NSLocationWhenInUseUsageDescription": "Location access is not actively used by PlateMate. This permission is required by underlying system frameworks.",
        "NSHealthShareUsageDescription": "PlateMate reads your health data from Apple Health to track your steps, heart rate, workouts, and other fitness metrics. This helps provide personalized nutrition and fitness insights.",
        "NSHealthUpdateUsageDescription": "PlateMate may save your workout and nutrition data to Apple Health to help you track your overall health and fitness progress.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.applesignin": [
          "Default"
        ],
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.background-delivery": true
      },
      "associatedDomains": [
        "applinks:platemate.app"
      ],
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "package": "com.platemate.app",
      "versionCode": 12,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "platemate"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.BODY_SENSORS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_HEALTH",
        "android.permission.WAKE_LOCK",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.health.READ_STEPS",
        "android.permission.health.READ_HEART_RATE",
        "android.permission.health.READ_ACTIVE_CALORIES_BURNED",
        "android.permission.health.READ_TOTAL_CALORIES_BURNED",
        "android.permission.health.READ_EXERCISE",
        "android.permission.health.READ_SLEEP",
        "android.permission.health.READ_DISTANCE"
      ],
      "runtimeVersion": "1.0.0"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "PlateMate needs camera access to capture photos of your meals for food logging, scan food barcodes for quick nutrition lookup, and help you track your dietary goals visually."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "PlateMate needs camera access to capture photos of your meals for food logging, scan food barcodes for quick nutrition lookup, and help you track your dietary goals visually.",
          "enableMicrophonePermission": false
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.570062506772-qtvk2v9k0utvi7j0fuuho8auk549eh45"
        }
      ],
      "expo-sqlite",
      "expo-background-fetch",
      "expo-task-manager",
      "./notifee.plugin.js",
      "expo-font",
      "expo-asset",
      "expo-apple-authentication",
      [
        "react-native-health",
        {
          "isClinicalDataEnabled": false
        }
      ],
      [
        "react-native-health-connect",
        {
          "requestPermissionsRationale": "PlateMate uses Health Connect to sync your health data including steps, heart rate, workouts, and sleep for personalized nutrition and fitness tracking."
        }
      ]
    ],
    "owner": "haamed",
    "extra": {
      "eas": {
        "projectId": "6c1ede6a-d918-4fbc-a5b8-c549ed290ff6"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/6c1ede6a-d918-4fbc-a5b8-c549ed290ff6"
    }
  }
}