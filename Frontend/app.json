{
  "expo": {
    "name": "PlateMate",
    "slug": "PlateMate",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "sdkVersion": "53.0.0",
    "splash": {
      "image": "./assets/icon2-edited.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zentraai.platematepro",
      "buildNumber": "5",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch"
        ],
        "NSMotionUsageDescription": "PlateMate uses motion and fitness data to track your daily steps and help you achieve your fitness goals.",
        "NSHealthShareUsageDescription": "PlateMate uses HealthKit to read your step count data and provide accurate fitness tracking.",
        "NSHealthUpdateUsageDescription": "PlateMate may write step data to HealthKit to keep your fitness data synchronized.",
        "NSCameraUsageDescription": "$(PRODUCT_NAME) needs access to your Camera to take photos and videos.",
        "NSLocationWhenInUseUsageDescription": "Location access is not actively used by PlateMate. This permission is required by underlying system frameworks.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": []
      }
    },
    "android": {
      "package": "com.platemate.app",
      "versionCode": 6,
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.BODY_SENSORS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.WAKE_LOCK",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera"
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera to take photos and videos.",
          "enableMicrophonePermission": false
        }
      ],
      "expo-sqlite",
      "expo-background-fetch",
      "expo-task-manager",
      "./notifee.plugin.js",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "6c1ede6a-d918-4fbc-a5b8-c549ed290ff6"
      }
    },
    "owner": "haamed"
  }
}
