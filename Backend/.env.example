# Database configuration
DATABASE_URL=postgresql://user:password@host:port/dbname

# API Keys
OPENAI_API_KEY=your_openai_api_key
ARLI_AI_API_KEY=your_arli_ai_api_key

# Firebase Authentication (choose ONE method)
# Option 1: Path to Firebase Admin SDK JSON file
FIREBASE_ADMIN_SDK_PATH=firebase-admin-sdk.json

# Option 2: Firebase credentials as JSON string (use this for more security)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id",...}

# CORS Settings - Set to appropriate domain in production
CORS_ALLOW_ORIGIN=* 