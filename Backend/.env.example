# Backend Environment Configuration
# Copy this file to .env and configure with your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# OpenAI API (Required for nutrition analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# FatSecret API (Required for food database search)
FATSECRET_CLIENT_ID=your-fatsecret-client-id
FATSECRET_CLIENT_SECRET=your-fatsecret-client-secret

# Redis Configuration (Optional - for rate limiting and caching)
# If not set, rate limiting and JWT caching will be disabled
REDIS_URL=redis://localhost:6379
RATE_LIMITING_ENABLED=false

# RevenueCat API (Required for subscription management)
REVENUECAT_API_KEY=your-revenuecat-api-key

# AI Operation Limits (Optional)
# Maximum concurrent AI operations (lower this on systems with <4GB RAM)
AI_OPERATION_LIMIT=100

# Server Configuration (Optional)
# PORT=8000
# HOST=0.0.0.0

# DeepSeek API (Optional - alternative AI provider)
# DEEPSEEK_API_KEY=your-deepseek-api-key
